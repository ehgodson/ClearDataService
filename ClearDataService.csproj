<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>

		<Version>2.0.1</Version>
		<ProduceReferenceAssembly>True</ProduceReferenceAssembly>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		
		<Description>
			A simple data object service that combines the power of Ef 
			with the flexibility of Dapper for managing SQL Server data.
		</Description>
		<PackageTags>data access, ef, dapper, sql server</PackageTags>

		<Authors>Godwin Ehichoya</Authors>
		<Company>Clearwox Systems</Company>
		<Copyright>Copyright 2022</Copyright>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		
		<PackageProjectUrl>https://github.com/ehgodson/ClearDataService</PackageProjectUrl>
		<License>https://github.com/ehgodson/ClearDataService?tab=MIT-1-ov-file</License>
		<RepositoryUrl>https://github.com/ehgodson/ClearDataService</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Data.SqlClient" Version="6.0.1" />
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="9.0.1" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="9.0.1" />
		<PackageReference Include="Dapper" Version="2.1.44" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="CHANGELOG.md">
	    <PackagePath>\</PackagePath>
	    <Pack>True</Pack>
	  </None>
	  <None Update="README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

</Project>